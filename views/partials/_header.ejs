<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success"
    style="background: linear-gradient(to bottom, rgb(10, 187, 178), #345);">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="justify-content-end pr-3">
      <div class="row pt-1">
        <% if (username) { %>
          <h4 class="mr-3 pt-1" style="color: white;"><%= username %></h4>
          <form action="/logout" method="POST">
            <button type="submit" class="btn btn-outline-warning">Logout</button>
          </form>
        <% } else { %>
          <div class="container">
            <div class="row">
                <a href="/login" class="btn btn-primary mb-1">Login</a>
                <a href="/register" class="btn btn-primary ml-2 mb-1">Register</a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>